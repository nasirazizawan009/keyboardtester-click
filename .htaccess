# Serve .xml and .shtml files correctly
AddType application/xml .xml
AddType text/html .shtml
AddHandler server-parsed .shtml
Options +Includes
AddType image/webp .webp
AddType image/avif .avif

RewriteEngine On
RewriteBase /

# ============================================
# CANONICAL URL ENFORCEMENT
# Force: HTTPS + non-www (keyboardtester.click)
# ============================================

# 1. Force HTTPS (redirect all HTTP to HTTPS)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# 2. Force non-www (redirect www to non-www)
RewriteCond %{HTTP_HOST} ^www\.keyboardtester\.click$ [NC]
RewriteRule ^ https://keyboardtester.click%{REQUEST_URI} [R=301,L]

# Combined: Catch any remaining edge cases (http + www)
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteCond %{HTTP_HOST} ^(?:www\.)?(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# ============================================

# Serve WebP when supported and available
RewriteCond %{HTTP_ACCEPT} image/webp
RewriteCond %{REQUEST_FILENAME} \.(png|jpe?g)$
RewriteCond %{REQUEST_FILENAME}.webp -f
RewriteRule ^(.+)\.(png|jpe?g)$ $1.$2.webp [T=image/webp,E=WEBP:1,L]

# Redirect old keyboard tester URLs to new organized structure
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^keyboard_tester_english\.php$ /tools/keyboard-tester/ [R=301,L]
RewriteRule ^keyboard-tester\.php$ /tools/keyboard-tester/ [R=301,L]
RewriteRule ^keyboard_tester_arabic\.php$ /languages/arabic/ [R=301,L]
RewriteRule ^keyboard_tester_russian\.php$ /languages/russian/ [R=301,L]
RewriteRule ^keyboard_tester_spanish\.php$ /languages/spanish/ [R=301,L]
RewriteRule ^keyboard_tester_french\.php$ /languages/french/ [R=301,L]
RewriteRule ^keyboard_tester_portuguese\.php$ /languages/portuguese/ [R=301,L]
RewriteRule ^keyboard_tester_japanese\.php$ /languages/japanese/ [R=301,L]
RewriteRule ^keyboard_tester_german\.php$ /languages/german/ [R=301,L]
RewriteRule ^keyboard_tester_korean_index\.php$ /languages/korean/ [R=301,L]

# Redirect old tool URLs to current versions  
RewriteRule ^keyboard-typing-test\.php$ /keyboard_typing_test.php [R=301,L]
RewriteRule ^mouse-speed-tester\.php$ /mouse_speed_tester.php [R=301,L]
RewriteRule ^mouse-sensitivity-dpi-tester\.php$ /mouse_sensitivity_DPI_tester.php [R=301,L]
RewriteRule ^screen-tester\.php$ /screentestindex.php [R=301,L]
RewriteRule ^webcam-tester\.php$ /webcamtesterindex.php [R=301,L]
RewriteRule ^qr-code-generator\.php$ /QR_code_generator_scanner.php [R=301,L]
RewriteRule ^whatsapp-brand-link-generator\.php$ /whatsapp-Brand-link-generator.php [R=301,L]
RewriteRule ^headphone-speaker-tester\.php$ /headphone_speaker_tester_index.php [R=301,L]

# Tool pages redirect
RewriteRule ^tools\.php$ /pages/tools.php [R=301,L]

# Assets fix - redirect wrong paths to correct ones
RewriteRule ^tools/assets/(.*)$ /assets/$1 [R=301,L]

# Favicon fallback: serve navigation.png for /favicon.ico
RewriteCond %{REQUEST_URI} ^/favicon\.ico$
RewriteRule ^favicon\.ico$ /navigation.png [L]

# Fallback: If .html file doesn't exist, serve .php version with same name
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} \.html$
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.*)\.html$ /$1.php [QSA,L]

# ============================================
# GZIP COMPRESSION - Reduces file sizes by 70%
# ============================================
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject

    # Remove browser bugs
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# Fallback for servers without mod_deflate
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
    mod_gzip_item_include handler ^cgi-script$
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_include mime ^application/x-javascript.*
    mod_gzip_item_exclude mime ^image/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

# ============================================
# BROWSER CACHING - Expires Headers
# ============================================
<IfModule mod_expires.c>
    ExpiresActive On

    # Default expiration: 1 week
    ExpiresDefault "access plus 1 week"

    # HTML - short cache (content changes often)
    ExpiresByType text/html "access plus 1 hour"

    # CSS and JavaScript - 1 year (use versioning for updates)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"

    # Images - 1 year
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"

    # Fonts - 1 year
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"

    # Data files
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType text/xml "access plus 0 seconds"

    # Manifest files
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType text/cache-manifest "access plus 0 seconds"
</IfModule>

# ============================================
# CACHE-CONTROL HEADERS (More specific control)
# ============================================
<IfModule mod_headers.c>
    # Security headers
    Header unset X-Powered-By
    Header always unset X-Powered-By
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (CSP) - Prevents XSS attacks
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.clarity.ms https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.clarity.ms https://www.google-analytics.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self';"

    # Vary headers for proper caching
    Header append Vary "Accept-Encoding"
    Header append Vary "Accept" env=WEBP

    # Static assets - immutable, 1 year cache
    <FilesMatch "\.(css|js|mjs)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Images - immutable, 1 year cache
    <FilesMatch "\.(png|jpg|jpeg|gif|webp|avif|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Fonts - immutable, 1 year cache
    <FilesMatch "\.(woff2|woff|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>

    # HTML/PHP - short cache, must revalidate
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>

    # JSON - no cache (dynamic data)
    <FilesMatch "\.json$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # Sitemap XML - allow caching and proper fetching
    <FilesMatch "sitemap.*\.xml$">
        Header set Cache-Control "public, max-age=86400"
        Header set Content-Type "application/xml; charset=utf-8"
        Header unset Content-Security-Policy
        Header unset X-Frame-Options
        Header unset X-Content-Type-Options
    </FilesMatch>

    # Robots.txt - plain text
    <FilesMatch "robots\.txt$">
        Header set Cache-Control "public, max-age=86400"
        Header set Content-Type "text/plain; charset=utf-8"
        Header unset Content-Security-Policy
        Header unset X-Frame-Options
        Header unset X-Content-Type-Options
    </FilesMatch>
</IfModule>

